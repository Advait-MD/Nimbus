<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingTop="48dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Title -->

    <!-- Radius Slider Label -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="North"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <!-- Radius Slider -->

    <!-- Create Geofence Button -->
    <TextView
        android:id="@+id/tv_selected_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Selected Radius: 10 meters"
        android:textColor="#000000"
        android:textSize="16sp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/seekbar_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:stepSize="10"
        android:valueFrom="10"
        android:valueTo="200" />

    <Button
        android:id="@+id/btn_create_geofence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Geofence"
        android:layout_marginBottom="16dp" />

    <!-- Dropdown Label -->
    <TextView
        android:id="@+id/tv_dropdown_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Geofences"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"/>

    <!-- RecyclerView taking remaining space -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_geofences"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:visibility="gone"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_margin="16dp"
        />



</LinearLayout>
